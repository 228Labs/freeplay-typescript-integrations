{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "removeComments": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
